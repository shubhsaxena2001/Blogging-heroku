<%- include("partials/header.ejs"); -%> 

<h1>Compose</h1>
<form action="/compose" method="post" autocomplete="off">
    
    <div class="form-group">
        <label>Title</label>
        <input name="postTitle" type="text" class="form-control" autofocus>
    </div>

    <div class="form-group">
        <label>Post</label>
        <textarea name="postBody" id="" cols="80" rows="8" class="form-control"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

